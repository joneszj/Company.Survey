<div class="modal" id="addContentBlockModal">
    <input type="hidden" id="stepContentStepId" />
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Add Content Block</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="stepTitle">Content</label>
                    <input type="text" class="form-control" id="contentBlockContent" placeholder="Enter content" required>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" data-dismiss="modal" onclick="addContentBlockCall()">
                    Add Content
                </button>
            </div>
        </div>
    </div>
</div>
<script>
    function addContentBlockCall() {
        addContentBlock({
            SurveyId: Number(document.getElementById('surveyId').value),
            StepContentId: Number(document.getElementById('stepContentStepId').value),
            Content: document.getElementById('contentBlockContent').value
        }).then(() => window.location.reload());
    }
</script>
