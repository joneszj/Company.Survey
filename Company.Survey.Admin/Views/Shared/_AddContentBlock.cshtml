<div class="modal" id="addQuestionModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Add Content Block</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="stepTitle">Title</label>
                    <input type="text" class="form-control" id="contentBlockTitle" placeholder="Enter title" required>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" data-dismiss="modal" onclick="addContentBlockCall()">
                    Add Step
                </button>
            </div>
        </div>
    </div>
</div>
