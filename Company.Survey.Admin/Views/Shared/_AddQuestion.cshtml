<div class="modal" id="addQuestionModal">
    <input type="hidden" id="questionStepId" />
    <input type="hidden" id="questionParentId" />
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Modal Heading</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <div class="modal-body">
                    <div class="form-group">
                        <label for="stepTitle">Position</label>
                        <input type="text" class="form-control" id="questionOrder" placeholder="Last if omitted...">
                    </div>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="stepTitle">Question</label>
                        <input type="text" class="form-control" id="questionText" placeholder="Enter Question Text" required>
                    </div>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="stepTitle">Note</label>
                        <input type="text" class="form-control" id="questionNote" placeholder="Enter Note">
                    </div>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="stepTitle">Content</label>
                        <input type="text" class="form-control" id="questionReplyType" placeholder="Enter content" required>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" data-dismiss="modal" onclick="addQuestionCall()">Add Question</button>
            </div>
        </div>
    </div>
</div>
<script>
    function addQuestionCall() {
        addQuestion({
            ParentId: document.getElementById('questionParentId').value ? Number(document.getElementById('questionParentId').value) : null,
            StepId: Number(document.getElementById('questionStepId').value),
            Note: document.getElementById('questionNote').value,
            Question: document.getElementById('questionText').value,
            ReplyType: Number(document.getElementById('questionReplyType').value),
            Order: document.getElementById('questionOrder').value ? Number(document.getElementById('questionOrder').value) : -1
        }).then(() => window.location.reload());
    }
</script>